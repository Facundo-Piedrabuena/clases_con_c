#include <stdio.h>
#include <string.h>
#include <ctype.h>

void aMinusculas(char texto[])
{
    for (int i = 0; texto[i] != '\0'; i++)
    {
        texto[i] = tolower(texto[i]);
    }
}

int main()
{
    char oracion[200], palabra[50];

    printf("Ingres치 una oraci칩n: ");
    fgets(oracion, sizeof(oracion), stdin);
    printf("Ingres치 una palabra: ");
    fgets(palabra, sizeof(palabra), stdin);

    oracion[strcspn(oracion, "\n")] = '\0';
    palabra[strcspn(palabra, "\n")] = '\0';

    aMinusculas(oracion);
    aMinusculas(palabra);

    if (strstr(oracion, palabra) != NULL)
    {
        printf("La palabra fue encontrada.\n");
    }
    else
    {
        printf("La palabra no se encontr칩.\n");
    }

    return 0;
}
